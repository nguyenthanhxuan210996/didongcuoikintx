<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <EditText
            android:inputType="textPassword"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:id="@+id/edOldPassword06"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="The Old Pasword"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            />
        <EditText
            android:inputType="textPassword"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_below="@id/edOldPassword06"
            android:id="@+id/edNewPassword06"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="New Pasword"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />
        <EditText
            android:inputType="textPassword"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_below="@id/edNewPassword06"
            android:id="@+id/edNewPassword061"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Confirm New Pasword "
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnOk06"
            android:textSize="25dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:layout_below="@id/edNewPassword061"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:background="#97c111"/>
    </RelativeLayout>
</RelativeLayout>